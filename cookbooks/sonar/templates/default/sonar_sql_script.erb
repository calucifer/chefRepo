mysqladmin -u <%= @admin_user %> -p<%= @admin_password %> create <%= @schema %>
mysql -u <%= @admin_user %> -p<%= @admin_password %> << EOF
	GRANT USAGE ON *.* TO '<%= @user %>'@'localhost' IDENTIFIED BY '<%= @user_password %>';
	GRANT ALL PRIVILEGES ON <%= @schema %>.* TO '<%= @user %>'@'localhost';
EOF
mysqladmin -u <%= @admin_user %> -p<%= @admin_password %> flush-privileges
